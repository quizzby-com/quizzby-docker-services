# NocoDB Environment Variables
# Copy this file to .env and modify the values as needed

# Admin credentials
NOCODB_ADMIN_EMAIL=admin@quizzby.com
NOCODB_ADMIN_PASSWORD=your-secure-password-here

# Database settings
NOCODB_DB_PASSWORD=your-secure-db-password-here

# JWT Secret for authentication
NOCODB_JWT_SECRET=your-very-long-random-jwt-secret-key-here

# Public URL (change for production)
NOCODB_PUBLIC_URL=http://localhost:8080

# Email configuration (optional, for notifications)
# NC_SMTP_HOST=smtp.gmail.com
# NC_SMTP_PORT=587
# NC_SMTP_USERNAME=your-email@gmail.com
# NC_SMTP_PASSWORD=your-app-password
# NC_SMTP_SECURE=true
# NC_SMTP_FROM=your-email@gmail.com

# Storage configuration (optional, for file uploads)
# NC_S3_BUCKET_NAME=your-s3-bucket
# NC_S3_REGION=us-east-1
# NC_S3_ACCESS_KEY=your-access-key
# NC_S3_ACCESS_SECRET=your-secret-key